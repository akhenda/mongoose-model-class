{
  "extends": "eslint-config-heimdall/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "types": ["node", "jest"],
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
    "noErrorTruncation": true
  },
  "files": ["global.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.js", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
